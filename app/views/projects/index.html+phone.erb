<% provide(:title, t('home')) %>

<% @projects.each do |p| %>

<div class="single-project <%= p.title.parameterize%>">
      <div class="project-info"><div class="project-title-mobile"> <%= link_to project_path(p) do %> <%= p.title %><%end%> </div></div>
      <div class="subcat"><%= p.subcategory %> </div>
      <% p.thumbnails.each do |th| %><div class="thumbails-index" id= "<%=p.title.parameterize%>-thumb" ><%= image_tag (th.url)%></div><% end %>
</div>

<%end%>

<div class="heterodox-mobile">
  <%= inline_svg "heterodox.svg" , id: 'heterodox-logo' %>
  <p id="heterodox-text"><%= t ".heterodox" %></p>
  <p><%=link_to t('.heterodox-link') , 'http://www.heterodox.design' , target: "_blank" %></p>
</div>


<% @projects.each do |p| %>
 <script type="text/javascript">
$('.<%=p.title.parameterize %> a ').hover(function(){
$('#<%=p.title.parameterize%>-thumb').fadeIn()});
$('.<%=p.title.parameterize %> a ').mouseleave(function(){
$('#<%=p.title.parameterize%>-thumb').fadeOut()});
<% if p.nouveau? %>
$('.<%=p.title.parameterize %>').addClass('new-project')
<%end%>
</script>
<%end %>
