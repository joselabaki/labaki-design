<% provide(:title, t('home')) %>

<% @projects.each do |p| %>

<div class="single-project <%= p.title.parameterize%>">
    <div class="project-info">
      <div class="project-title"> <%= link_to project_path(p) do %><%= p.title %><%end%> </div>
    </div> <div class="subcat"><%= p.subcategory %> </div>

      <% p.thumbnails.each do |th| %>
      <div style="top:<%= p.topos %>px ; left:<%= p.leftpos%>px" class="thumbails-index" id= "<%=p.code%>-thumb" ><%= image_tag (th.url) , alt: p.alttext.to_s.parameterize %></div>
      <% end %>
</div>

<%end%>

<div class="heterodox">
  <%= inline_svg "heterodox.svg" , id: 'heterodox-logo' %>
  <p id="heterodox-text"><%= t ".heterodox" %></p>
  <p><%=link_to t('.heterodox-link') , 'http://www.heterodox.design' , target: "_blank" %></p>
</div>


<% @projects.each do |p| %>
 <script type="text/javascript">
$('.<%=p.title.parameterize %>  ').mouseenter(function(){
$('#<%=p.code%>-thumb').show()});

$('.<%=p.title.parameterize %>  ').mouseleave(function(){
$('#<%=p.code%>-thumb').hide()});


</script>
<%end %>
